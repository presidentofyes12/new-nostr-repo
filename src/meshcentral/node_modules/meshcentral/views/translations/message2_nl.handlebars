    <title id="topTitle">{{{title1}}}</title>
    <style>
        body {
            background-color: cadetblue;
            background: linear-gradient(to bottom right, #369, #036);
            height: 100%;
            overflow: hidden;
        }

        a:link { color: #c8c8c8; }
        a:visited { color: #c8c8c8; }
        a:hover { color: #c8c8c8; }
        a:active { color: #c8c8c8; }
    </style>
</head>
<body>
    <img style="position:absolute;left:0;bottom:0;z-index:-1;height:60%;opacity:0.1" src="../../images/login/back.png">
    <table id="centralTable" class="container" style="height:100%;z-index:1">
        <tbody><tr>
            <td style="width:100%;text-align:center;color:#c8c8c8;font-size:larger">
                <h1 id="mainTitle"></h1>
                <p id="mainMessage"></p>
            </td>
        </tr>
        <tr style="height:20px">
            <td>
                <div>
                    <div id="flink" style="margin-left:4px">{{{footer}}}</div>
                    <div id="flink" style="float:right;margin-right:4px">{{{rootCertLink}}}&nbsp;<a href="../../terms">Voorwaarden &amp; Privacy</a></div>
                </div>
            </td>
        </tr>
    </tbody></table>
    <script>
        var random = '{{{randomlength}}}' // Random length string for BREACH mitigation
        var titleid = parseInt('{{{titleid}}}');
        var msgid = parseInt('{{{msgid}}}');
        var domainurl = decodeURIComponent('{{{domainurl}}}');
        var arg1 = decodeURIComponent('{{{arg1}}}');
        var arg2 = decodeURIComponent('{{{arg2}}}');
        var urlargs = parseUriArgs();

        var title = '';
        if (titleid == 1) { title = "Account verificatie"; }
        if (titleid == 2) { title = "Bureaublad delen"; }
        if (titleid == 3) { title = "Onderhoud aan de server"; }
        if (titleid == 4) { title = "Terminal delen"; }
        QH('topTitle', Q('topTitle').innerText + ' - ' + title);
        QH('mainTitle', title);

        var msg = '';
        switch (msgid) {
            case 1: { msg = "FOUT: ongeldig domein."; break; }
            case 2: { msg = format("FOUT: Ongeldige gebruikersnaam \"{0}\".", arg1); break; }
            case 3: { msg = format("FOUT: Ongeldige e-mail \"{0}\" voor gebruiker \"{1}\".", arg1, arg2); break; }
            case 4: { msg = format("E-mail \"{0}\" voor gebruiker \"{1}\" al geverifieerd.", arg1, arg2); break; }
            case 5: { msg = format("E-mail \"{0}\" reeds in gebruik door een ander account. Wijzig het e-mailadres en probeer het opnieuw.", arg1); break; }
            case 6: { msg = format("Geverifieerd e-mailadres {0} voor gebruikersaccount {1}.", '<b style=color:white>' + arg1 + '</b>', '<b style=color:white>' + arg2 + '</b>'); break; }
            case 7: { msg = format("E-mail \"{0}\" voor gebruiker \"{1}\" niet geverifieerd.", arg1, arg2); break; }
            case 8: {
                msg = '<div>' + format("Wachtwoord voor account {0} is gereset naar:", '<b style=color:white>' + arg1 + '</b>') + '</div><div style=padding:14px;font-size:18px><b style=color:white>' + arg2 + '</b></div>';
                msg += "Log in en ga naar het tabblad \"Mijn Account\" om uw wachtwoord bij te werken.";
                break;
            }
            case 9: { msg = "FOUT: Ongeldige account controle."; break; }
            case 10: { msg = "FOUT: Ongeldige accountcontrole, verificatie URL is slechts 30 minuten geldig."; break; }
            case 11: { msg = "Link voor delen is niet geldig."; break; }
            case 12: { msg = "link voor delen is verlopen."; break; }
            case 13: { msg = "Als je een administrator bent, [hier inloggen].".replace('[', '<a href=?loginscreen=1>').replace(']', '</a>'); break; }
            case 14: { msg = '<a href=' + window.location.href + '&confirm=1>' + "Klik hier om je wachtwoord opnieuw in te stellen." + '</a>'; break; }
        }

        // Add login page link
        if ((msgid != 11) && (msgid != 12) && (msgid != 13) && (msgid != 14)) { msg += ' <a href="' + domainurl + (urlargs.key ? ('?key=' + urlargs.key) : '') + '">' + "Ga naar de inlogpagina" + '</a>.' }
        QH('mainMessage', msg);

        function format(format) { var args = Array.prototype.slice.call(arguments, 1); return format.replace(/{(\d+)}/g, function (match, number) { return typeof args[number] != 'undefined' ? args[number] : match; }); };

        // Parse URL arguments, only keep safe values
        function parseUriArgs() {
            var href = window.document.location.href;
            if (href.endsWith('#')) { href = href.substring(0, href.length - 1); }
            var name, r = {}, parsedUri = href.split(/[\?&|]/);
            parsedUri.splice(0, 1);
            for (var j in parsedUri) {
                var arg = parsedUri[j], i = arg.indexOf('=');
                name = arg.substring(0, i);
                r[name] = arg.substring(i + 1);
                if (!isSafeString(r[name])) { delete r[name]; } else { var x = parseInt(r[name]); if (x == r[name]) { r[name] = x; } }
            }
            return r;
        }
    </script>


</body></html>